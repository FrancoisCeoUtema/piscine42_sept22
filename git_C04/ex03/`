#include <stdio.h>

int	is_correct(char c)
{
	if (
		(c != '\0' && c >= '0' && c <= '9') ||
		c == '+' || c == '-'
	)
	{
		return (1);
	}
	else
	{
		return (0);
	}
}

int	ft_atoi(char *str)
{
	int	nbr_minus;

	nbr_minus = 0;
	while (is_correct(*str))
	{
		if (*str == '-')
		{
			nbr_minus += 1;
		}
	}
}
